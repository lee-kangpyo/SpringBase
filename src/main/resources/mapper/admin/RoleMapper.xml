<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akmz.springBase.admin.mapper.RoleMapper">

    <resultMap id="roleResultMap" type="com.akmz.springBase.admin.model.entity.Role">
        <id property="roleId" column="ROLE_ID"/>
        <result property="roleName" column="ROLE_NAME"/>
        <result property="description" column="DESCRIPTION"/>
    </resultMap>

    <select id="findAllRoles" resultMap="roleResultMap">
        SELECT ROLE_ID, ROLE_NAME, DESCRIPTION
        FROM ROLES
    </select>

    <select id="findRoleById" resultMap="roleResultMap">
        SELECT ROLE_ID, ROLE_NAME, DESCRIPTION
        FROM ROLES
        WHERE ROLE_ID = #{roleId}
    </select>

    <select id="findRoleByName" resultMap="roleResultMap">
        SELECT ROLE_ID, ROLE_NAME, DESCRIPTION
        FROM ROLES
        WHERE ROLE_NAME = #{roleName}
    </select>

    <insert id="insertRole" useGeneratedKeys="true" keyProperty="roleId">
        INSERT INTO ROLES (ROLE_NAME, DESCRIPTION)
        VALUES (#{roleName}, #{description})
    </insert>

    <update id="updateRole">
        UPDATE ROLES
        SET DESCRIPTION = #{description}
        WHERE ROLE_ID = #{roleId}
    </update>

    <delete id="deleteRole">
        DELETE FROM ROLES
        WHERE ROLE_ID = #{roleId}
    </delete>

</mapper>
